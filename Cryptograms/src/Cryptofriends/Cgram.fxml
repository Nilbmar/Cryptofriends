<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="375.0" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Cryptofriends.CgramController">
   <center>
      <ScrollPane hbarPolicy="NEVER" prefHeight="476.0" prefWidth="370.0" BorderPane.alignment="CENTER">
        <content>
          <AnchorPane fx:id="anchor" prefHeight="448.0" prefWidth="355.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </AnchorPane>
        </content>
      </ScrollPane>
   </center>
   <top>
      <SplitPane maxHeight="90.0" minHeight="0.0" prefWidth="375.0" BorderPane.alignment="CENTER">
        <items>
            <VBox fx:id="vboxDisplayItems" maxHeight="90.0" minHeight="0.0" prefHeight="55.0" prefWidth="373.0">
               <children>
                  <MenuBar prefHeight="22.0" prefWidth="327.0">
                    <menus>
                      <Menu mnemonicParsing="false" text="Puzzle">
                        <items>
                              <MenuItem id="clearIncorrect" fx:id="clearPuzzle" mnemonicParsing="false" onAction="#clearPuzzle" text="Clear Letters" />
                              <MenuItem id="newPuzzle" fx:id="newPuzzle" mnemonicParsing="false" onAction="#loadNewPuzzle" text="New Puzzle" />
                              <MenuItem fx:id="randomPuzzle" mnemonicParsing="false" onAction="#loadRandomPuzzle" text="Random Puzzle" />
                          <MenuItem fx:id="exitProgram" mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
                        </items>
                      </Menu>
                      <Menu mnemonicParsing="false" text="Reveal">
                           <items>
                              <MenuItem fx:id="dislplayLetter" mnemonicParsing="false" onAction="#displayLetter" text="Letter" />
                              <MenuItem fx:id="displayMistakes" mnemonicParsing="false" onAction="#hilightIncorrect" text="Mistakes" />
                              <MenuItem fx:id="displayAllLetters" mnemonicParsing="false" onAction="#displayAllLetters" text="Answer Puzzle" />
                           </items>
                      </Menu>
                        <Menu mnemonicParsing="false" text="Players">
                          <items>
                              <MenuItem fx:id="nextPlayer" mnemonicParsing="false" onAction="#switchPlayer" text="Next Player" />
                              <Menu mnemonicParsing="false" text="Edit Players">
                                 <items>
                                    <MenuItem fx:id="renamePlayer" mnemonicParsing="false" onAction="#renamePlayer" text="Rename Player" />
                                  <MenuItem fx:id="addPlayer" mnemonicParsing="false" onAction="#addPlayer" text="Add Player" />
                                    <MenuItem fx:id="removePlayer" mnemonicParsing="false" onAction="#removePlayer" text="Remove Player" />
                                 </items>
                              </Menu>
                          </items>
                        </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <HBox alignment="CENTER" prefHeight="22.0" prefWidth="378.0">
                     <children>
                        <Label fx:id="lblAuthor" alignment="CENTER" contentDisplay="CENTER" prefHeight="22.0" text="Author">
                           <font>
                              <Font name="Envy Code R Bold" size="20.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblAuthorSubject1" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="22.0" text=" - " textAlignment="CENTER">
                           <font>
                              <Font name="Envy Code R Italic" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblSubject" alignment="CENTER" contentDisplay="CENTER" layoutX="107.0" layoutY="10.0" prefHeight="22.0" text="Subject" textAlignment="RIGHT">
                           <font>
                              <Font name="Envy Code R Italic" size="15.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
        </items>
      </SplitPane>
   </top>
   <bottom>
      <VBox fx:id="vboxBottomPanel" maxHeight="50.0" minHeight="0.0" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="hboxScorePanel" alignment="CENTER_RIGHT" maxHeight="50.0" minHeight="0.0" prefHeight="50.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label text="Player">
                           <font>
                              <Font name="Envy Code R Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblPlayerName" text="Number 1">
                           <font>
                              <Font name="Envy Code R Italic" size="16.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" prefHeight="200.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0">
                           <children>
                              <Label text="Score:" textAlignment="RIGHT">
                                 <font>
                                    <Font name="Envy Code R Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblScore" alignment="CENTER_RIGHT" text="100%">
                                 <font>
                                    <Font name="Envy Code R Italic" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0">
                           <children>
                              <Label text="Time: " textAlignment="RIGHT">
                                 <font>
                                    <Font name="Envy Code R Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblTime" text="100m 60s">
                                 <font>
                                    <Font name="Envy Code R Italic" size="16.0" />
                                 </font>
                              </Label>
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets right="5.0" />
                           </padding>
                        </HBox>
                     </children>
                     <opaqueInsets>
                        <Insets right="15.0" />
                     </opaqueInsets>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></HBox>
            <HBox fx:id="hboxClearIncorrect" alignment="BOTTOM_CENTER" maxHeight="50.0" minHeight="0.0" prefHeight="0.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="200.0" text="Clear Incorrect?">
                     <font>
                        <Font name="Envy Code R" size="22.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                <Button fx:id="btnClearIncorrectYes" mnemonicParsing="false" onAction="#clearIncorrect" prefWidth="50.0" text="Yes">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnClearIncorrectNo" mnemonicParsing="false" onAction="#showClearIncorrectBtns" prefWidth="50.0" text="No">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
